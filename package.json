{
  "name": "mybricks-webview",
  "displayName": "MyBricks.ai",
  "description": "MyBricks.ai 可视化开发平台 - VSCode 集成版，支持小程序、H5 页面可视化搭建",
  "version": "0.0.9",
  "publisher": "mybricks",
  "scripts": {
    "inspect": "npx @modelcontextprotocol/inspector --config ./mcp.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mybricks/mybricks-ide-as-vscode-plugin.git"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mybricks.openIDE",
        "title": "Open MyBricks IDE",
        "icon": "asserts/icon.svg"
      },
      {
        "command": "mybricks.init",
        "title": "初始化 MyBricks 环境"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mybricks-sidebar",
          "title": "MyBricks",
          "icon": "asserts/icon.svg"
        }
      ]
    },
    "views": {
      "mybricks-sidebar": [
        {
          "type": "webview",
          "id": "mybricks.ide",
          "name": "MyBricks IDE",
          "visibility": "hidden"
        }
      ]
    },
    "configuration": {
      "title": "MyBricks",
      "properties": {
        "mybricks.mcp.port": {
          "type": "number",
          "default": 3001,
          "description": "MCP HTTP 服务器端口号",
          "minimum": 1000,
          "maximum": 65535
        }
      }
    }
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3"
  }
}
