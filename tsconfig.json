{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "outDir": "out",
    "rootDir": ".",
    "strict": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": false,
    "jsx": "react",
    "types": ["node", "vscode"],
    "baseUrl": ".",
    "paths": { "@/*": ["asserts/*"] }
  },
  "include": ["src/**/*", "utils/**/*"],
  "exclude": ["node_modules", "out", "asserts"]
}
