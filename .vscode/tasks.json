{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build all",
      "dependsOn": ["build extension", "build webview"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "build extension",
      "type": "npm",
      "script": "build:extension",
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "problemMatcher": "$tsc"
    },
    {
      "label": "build webview",
      "type": "npm",
      "script": "build:webview",
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      }
    },
    {
      "label": "watch all",
      "dependsOn": ["watch extension", "watch webview"],
      "problemMatcher": "$tsc-watch",
      "isBackground": true
    },
    {
      "label": "watch extension",
      "type": "npm",
      "script": "watch:extension",
      "isBackground": true,
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "problemMatcher": "$tsc-watch"
    },
    {
      "label": "watch webview",
      "type": "npm",
      "script": "watch:webview",
      "isBackground": true,
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      }
    }
  ]
}
